<link rel="stylesheet" href="/css/editentrystyle.css">
<script nonce="{{nonce}}" src="/scripts/edit-entry.js"></script>

<section>
    <div id="type">
        <select id="entrytype" name="entryType">
            {{#select type}}
                <option value="expense">Expense</option>
                <option value="income">Income</option>
            {{/select}}
        </select>
    </div>

    <div id="infoinput">
        <div id="leftcolumn">
            <input id="description" type="text" value="{{description}}" placeholder="Description"><br>
            <input id="date" type="date" value="{{formatDate date}}" placeholder="Date"><br>
            <input id="category" type="text" value="{{category}}" placeholder="Category">
        </div>
        <div id="rightcolumn">
            <input id="amount" type="number" value="{{amount}}" placeholder="Amount">
        </div>
    </div>
    <div id="notesarea">
        <textarea id="notes" placeholder="Notes...">{{notes}}</textarea>
    </div>
    <div id="buttons">
        <button id="confirmbtn" value="{{post_id}}" type="button">Confirm</button>
        <button id="cancelbtn">Cancel</button>
    </div>
</section>