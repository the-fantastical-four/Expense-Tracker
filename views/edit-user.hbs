<link rel="stylesheet" href="/css/editentrystyle.css">
<script src="/scripts/edit-user.js"></script>

<section>
    <div id="infoinput">
        <img src="/{{profile_picture}}" alt="User Image"><br>
        <!--
        <h2 id="name"> Name: {{full_name}} </h2><br>
        <text id="email"> Email: {{email}} </text><br>
        <text id="phone"> Phone: {{phone_number}} </text>
